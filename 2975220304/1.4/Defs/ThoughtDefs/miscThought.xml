<Defs>
	<ThoughtDef>
		<defName>mostlytraits_failed_surgery</defName>
		<durationDays>2</durationDays>
		<stackLimit>10</stackLimit>
<developmentalStageFilter>Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>a failed surgery</label>
				<description>I can't believe I just failed a surgery, which step went wrong? Do I have enough ability to be an doctor? I just let other people down</description>
				<baseMoodEffect>-18</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	

	<ThoughtDef>
		<defName>mostlytraits_surgery_death</defName>
		<durationDays>3</durationDays>
		<stackLimit>3</stackLimit>
<developmentalStageFilter>Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>a catastrophic surgical failure</label>
				<description>This is all because of me</description>
				<baseMoodEffect>-35</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	

	<ThoughtDef>
		<defName>mostlytraits_veteran_ranged_weapon</defName>
		<workerClass>ThoughtWorker_IsCarryingRangedWeapon</workerClass>
<requiredTraits>
<li>mostlytraits_veteran</li>
</requiredTraits>
<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>having a ranged weapon</label>
				<description>You can always put the faith in your gun</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>














	<ThoughtDef>
		<defName>mostlytraits_bloodthirst_hurt_thought</defName>
		<workerClass>mostlytraits.ThoughtWorker_bloodthirst</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<requiredTraits>
			<li>mostlytrait_bloodthirsty</li>
		</requiredTraits>
		<stages>
			<li>
				<label>minor pain</label>
				<description>No, this pain has no effect on me</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>serious pain</label>
				<description>This pain...it makes me feel.....irritable</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
			<li>
				<label>intense pain</label>
				<description>Come on, you m***f***! Come fight with me!</description>
				<baseMoodEffect>30</baseMoodEffect>
			</li>

		</stages>
	</ThoughtDef>












<ThoughtDef>
		<defName>mostlytraits_smoke_bad_mood</defName>
		<durationDays>2</durationDays>
		<stackLimit>10</stackLimit>
<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>Had a bad experience</label>
